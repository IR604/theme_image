<!DOCTYPE html>
<html lang="ja">
<head>
<meta charset="UTF-8">
<title><%-themeinfo.contents%></title>
<meta name="viewport" content="width=device-width">

<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
<link rel="stylesheet" href="css/theme_page.css">
<link rel="stylesheet" href="css/common.css">

</head>
<body>
    <%- include('header')%>
    
    <div class="boxC">
        <div class="box1">
            <%-themeinfo.contents%>
            <div class="date"><%-themeinfo.date.getFullYear()%>/<%-themeinfo.date.getMonth()+1%>/<%-themeinfo.date.getDate()%></div>
        </div>
        <div class="box4">
            <div class="upload_button">
                <form action="/illustupload" method="get">
                    <input type="hidden" name="id" value="<%= themeinfo.item_id %>">
                    <input type="submit" value="このテーマで投稿">
                </form>
            </div>
            <div class="list_add">
                <details>
                    <summary class="menuber">
                        <span class="material-symbols-outlined">list</span>
                    </summary>
                    <div class="setting_summary">
                        <h1 id="setting_head">リストに追加</h1>
                        <%-list_add%>
                    </div>
                </details>
            </div>
        </div>
        <div class="box2">
            <ul>
                <% for(var i in tag) { %>
                    <li><a href="/research?search=<%- tag[i].tag %>"><%= tag[i].tag %></a></li>
                <% } %>
            </ul>
        </div>
        <div class="box5-5">
            <div class="box5-icon">
                <img src="images/icons/icon.png"  id="avatar" alt=""  width="70" height="70">
            </div>
            <div class="box5-name">
                <a href="us<%-themeinfo.account_id%>"><%-themeinfo.username%></a>
            </div>
            <div class="box5-follow">
                <%-judgement%>
            </div>
        </div>
        <div class="box3">
            <h2 class="box3-1">
                <a href="/theme_image?id=<%-themeinfo.item_id%>">イラスト</a>
            </h2>
            <div class="image_box">
                <% for(var i in imageinfo) { %>
                    <div class="image_ichiran">
                        <a href="im<%-imageinfo[i].item_id%>">
                            <div class="image_top">
                                <img src="images/images/<%-imageinfo[i].name%>" width="100%" height="100%">
                            </div>
                            <div class="image_top2">
                                <%-imageinfo[i].title%>
                            </div>
                        </a>
                        <a href="us<%-imageinfo[i].account_id%>">
                            <div class="theme_bottom">
                                <div class="theme_icon">
                                    <img src="images/icons/<%-imageinfo[i].account_id%>.jpg"  id="avatar" alt=""  width="50" height="50">
                                </div>
                                <div class="theme_name">
                                    <%=imageinfo[i].username%>
                                </div>
                            </div>
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
        <div class="box3">
            <h2 class="box3-1">
                <a href="connection?id=<%-themeinfo.item_id%>&type=theme">関連テーマ</a>
            </h2>
            <div class="theme_box">
                <% for(var i in connection_theme) { %>
                    <div class="theme_ichiran">
                        <a href="/tm<%=connection_theme[i].item_id%>">
                            <div class="theme_top">
                                <%=connection_theme[i].contents%>
                            </div>
                        </a>
                        <a href="us<%-connection_theme[i].account_id%>">
                            <div class="theme_bottom">
                                <div class="theme_icon">
                                    <img src="images/icons/<%=connection_theme[i].account_id%>.jpg"  id="avatar" alt=""  width="50" height="50">
                                </div>
                                <div class="theme_name">
                                    <%=connection_theme[i].username%>
                                </div>
                            </div>
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
    <div class="copyright">
        コピーライト
    </div>
</body>
</html>
